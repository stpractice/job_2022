root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8

[*.yml]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[{*.html,*.less,*.sass,*.css,*.js,*.json}]
indent_size = 4
indent_style = space

[{*.php,composer.json,*.md}]
indent_size = 4
indent_style = space
